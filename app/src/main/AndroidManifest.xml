<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.sep.budgetmanager" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".controllers.BudgetManagerHome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.CashIn"
            android:label="@string/title_activity_cash_in" >
        </activity>
        <activity
            android:name=".controllers.CashOut"
            android:label="@string/title_activity_cash_out" >
        </activity>
        <activity
            android:name=".controllers.Budget"
            android:label="@string/title_activity_budget" >
        </activity>
        <activity
            android:name=".controllers.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".controllers.AddCategory"
            android:label="@string/title_activity_add_category" >
        </activity>
        <activity
            android:name=".controllers.Statistics"
            android:label="@string/title_activity_statistics" >
        </activity>
        <activity
            android:name=".controllers.Overview"
            android:label="@string/title_activity_overview" >
        </activity>
    </application>

</manifest>
